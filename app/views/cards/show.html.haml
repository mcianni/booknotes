.page-header
  %h1= @card.title 

- unless @bookmarks.blank?
  %ul.thumbnails
    - @bookmarks.each do |bookmark|
      %li.bookmark.span4
        %a{ href: bookmark.url }
          .data
            .title= bookmark.title
            = image_tag bookmark.screenshot.url(:thumb), class: 'screenshot'
- else
  .alert.alert-block
    %p
      You haven't added any bookmarks yet!
    = link_to 'Add one now', new_card_bookmark_path(@card)

.actions.clearfix
  = link_to 'New Bookmark', new_card_bookmark_path(@card), class: 'btn'
  = link_to 'Edit', edit_card_path(@card), class: 'btn'
